<%= simple_form_for(@remision) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


<center>
<div style="display:inline-block;" >
  <form>
        <div class="form-row">

          <div class="form-group col-md-12">
            <h5><%= f.input :fecha_expedicion %></h5>
          </div>

            <div class="form-group col-md-12">
              <h5>Cliente</h5>
              <%= collection_select(:remision,:clienteremi_id,Clienteremi.order(:nombre),:id,:client_order,{:prompt => 'Seleccionar cliente'},class:"custom-select col-md-12")%>
            </div>
          </div>
          <br>

          <div class="col-md-12">
            <div class="shadow p-3 mb-5 bg-white rounded">
            <h4>Productos a remisionar</h4>
            </div>
            <div id='atributos'>
              <%= f.simple_fields_for :atriremis do |atriremi|%>
              <%=render 'atriremis_fields', :f => atriremi%>
              <%end%>
              <div class='links'>
                <%= link_to_add_association 'Agregar', f, :atriremis,partial: 'atriremis_fields',class:"btn btn-outline-info"%>
              </div>
            </div>
          </div>
          <br>

          <div class="col-md-12">
            <div class="shadow p-3 mb-5 bg-white rounded">
            <h4>Productos a remisionar</h4>
            </div>
            <div id='atributos'>
              <%= f.simple_fields_for :atrichecks do |atricheck|%>
              <%=render 'atrichecks_fields', :f => atricheck%>
              <%end%>
              <div class='links'>
                <%= link_to_add_association 'Agregar', f, :atrichecks,partial: 'atrichecks_fields',class:"btn btn-outline-info"%>
              </div>
            </div>
          </div>
          <br>

        <hr><hr>
        <div class="form-row">
            <div class="form-group col-md-12">
              <div class="shadow-none p-3 mb-5 bg-light rounded">
                <h5><%= f.input :nota %></h5>
              </div>
            </div>
      </div>

  </form>

  <%= f.button :submit,"Generar",class:"btn btn-success col-md-4" %>
</div>
</center>
<%end%>
