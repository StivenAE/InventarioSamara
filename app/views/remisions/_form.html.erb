<%= simple_form_for(@remision) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<center>
<div style="display:inline-block;" >
  <form>
        <div class="form-row">
          <div class="form-group col-md-6">
            <h5><%= f.input :fecha_expedicion %></h5>
        </div>
        <div class="form-group col-md-6">
          <h5><%= f.input :fecha_vencimiento %></h5>
        </div>
          <div class="col-md-12">
            <div class="shadow p-3 mb-5 bg-white rounded">
            <h4>Atributos</h4>
            </div>
            <div id='atributos'>

              <%= f.simple_fields_for :atriremis do |atriremi|%>
              <%=render 'atriremis_fields', :f => atriremi%>
              <%end%>
              <div class='links'>
                <%= link_to_add_association 'Agregar', f, :atriremis,partial: 'atriremis_fields',class:"btn btn-outline-info"%>
              </div>
            </div>
          </div>
        </div>
        <br>
        <hr><hr>
        <div class="form-row">
            <div class="form-group col-md-12">
              <div class="shadow-none p-3 mb-5 bg-light rounded">
                <h5><%= f.input :nota %></h5>
              </div>
            </div>
      </div>
        <div class="form-row">
          <div class="form-group col-md-2">
            <h5><%= f.input :valor_bruto %></h5>
          </div>
          <div class="form-group col-md-2">
            <h5><%= f.input :descuento %></h5>
          </div>
          <div class="form-group col-md-3">
            <h5><%= f.input :subtotal %></h5>
          </div>
          <div class="form-group col-md-2">
            <h5><%= f.input :iva%></h5>
          </div>
          <div class="form-group col-md-3">
            <h5><%= f.input :total %></h5>
      </div>
      </div>
  </form>

  <%= f.button :submit,"Guardar",class:"btn btn-success col-md-4" %>
</div>
</center>
<%end%>
